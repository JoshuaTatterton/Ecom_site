<%= form_for :user, url: admin_sign_up_index_path do |f| %>
  <div class="card mb-3">
    <div class="card-header">
      Sign Up:
    </div>

    <div class="card-body">
      <div class="row mb-3">
        <div class="col">
          <%= f.label :name, class: "form-label" %>
          <%= f.text_field :name, class: "form-control", value: user.name, required: true %>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-6">
          <%= f.label :password, "Password:", class: "form-label" %>
          <%= f.password_field :password, class: "form-control", required: true %>
        </div>

        <div class="col-lg-6">
          <%= f.label :password_confirmation, "Password Confirmation:", class: "form-label" %>
          <%= f.password_field :password_confirmation, class: "form-control", required: true %>
        </div>
      </div>
    </div>

    <div class="card-footer">
      <%= f.submit "Sign up", class: "btn btn-success" %>
    </div>
  </div>
<% end %>
