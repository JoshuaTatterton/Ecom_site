<%= form_for :user, url: admin_password_reset_index_path do |f| %>
  <div class="card mb-3">
    <div class="card-header">
      Password Reset:
    </div>

    <div class="card-body">
      <div class="row">
        <div class="col-lg-6">
          <%= f.label :password, "Password:", class: "form-label" %>
          <%= f.password_field :password, class: "form-control", required: true %>
        </div>

        <div class="col-lg-6">
          <%= f.label :password_confirmation, "Password Confirmation:", class: "form-label" %>
          <%= f.password_field :password_confirmation, class: "form-control", required: true %>
        </div>
      </div>
    </div>

    <div class="card-footer">
      <%= f.submit "Reset Password", class: "btn btn-success" %>
    </div>
  </div>
<% end %>
