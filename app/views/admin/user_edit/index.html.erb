<%= form_for :user, url: admin_edit_index_path do |f| %>
  <div class="card mb-3">
    <div class="card-header">
      User:
    </div>

    <div class="card-body">
      <div class="row mb-3">
        <div class="col">
          <%= f.label :name, class: "form-label" %>
          <%= f.text_field :name, class: "form-control", value: user.name, required: true %>
        </div>
      </div>
    </div>

    <div class="card-footer">
      <%= f.submit "Update", class: "btn btn-success" %>
    </div>
  </div>
<% end %>
