<% disabled ||= false %>
<% tooltip ||= nil %>

<%= content_tag :span, class: "d-inline-block", data: { bs_toggle: "tooltip", bs_placement: "bottom", bs_title: tooltip } do %>
  <button type="button" class="btn btn-<%= disabled ? "secondary" : "danger" %>" <%= "disabled" if disabled %> >
    <%= render "generic/bootstrap_icon", icon: "trash" %>
  </button>
<% end %>
